<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/second_activity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_turkish"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:onClick="setLanguage"
        android:text="Set Turkish"
        app:layout_constraintEnd_toStartOf="@+id/button_english"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_english" />

    <Button
        android:id="@+id/button_english"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:onClick="setLanguage"
        android:text="Set English"
        app:layout_constraintEnd_toStartOf="@+id/button_chinese"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_turkish"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_chinese"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:onClick="setLanguage"
        android:text="Set Chinese"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_english"
        app:layout_constraintTop_toTopOf="@+id/button_english" />
</android.support.constraint.ConstraintLayout>